    .action-wrapper
      .action-button(ng-repeat='objective in suggestion.objectives')
        .title
          | {{ objective.name }}
        button.default-button(ng-click='usrCtr.rank(suggestion, objective, 1)')
          i.material-icons
            | sentiment_very_satisfied
